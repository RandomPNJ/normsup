= form_for @company, html: { class: 'm-form' } do |f|
  .m-portlet__body
    .m-form__section.m-form__section--first.col-md-6
      .form-group.m-form__group
        -# %label{:for => "example_input_full_name"} Société :
        -# %input.form-control.m-input{:placeholder => "Société", :type => "text", name: :q, value: @user.name}/
        -# %span.m-form__help Dénomination, Sirene, ou Siret.
        .field
          = f.label :libnj, 'Statut'
          = f.text_field :libnj, class: 'form-control m-input', disabled: true
        .field
          = f.label :name, 'Nom'
          = f.text_field :name, class: 'form-control m-input', disabled: true
        .field
          = f.label :dcren, 'Date de création'
          = f.text_field :dcren, class: 'form-control m-input', disabled: true, value: (@company.dcren.present? ? I18n.l(@company.dcren.to_date) : '')
        .field
          = f.label :l6_normalisee, 'Adresse'
          = f.text_field :l6_normalisee, class: 'form-control m-input', disabled: true
        .field
          = f.label :libtefen, 'Effectif'
          = f.text_field :libtefen, class: 'form-control m-input', disabled: true

        .field
          = f.label :siret, 'Siret'
          = f.text_field :siret, class: 'form-control m-input', disabled: true
        .field
          = f.label :siren, 'Siren'
          = f.text_field :siren, class: 'form-control m-input', disabled: true
    = link_to '< Retour', :back, class: 'btn btn-secondary'


