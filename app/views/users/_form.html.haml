= form_for @user, html: { class: 'm-form' } do |f|
  .m-portlet__body
    .m-form__section.m-form__section--first.col-md-6
      .form-group.m-form__group
        -# %label{:for => "example_input_full_name"} Société :
        -# %input.form-control.m-input{:placeholder => "Société", :type => "text", name: :q, value: @user.name}/
        -# %span.m-form__help Dénomination, Sirene, ou Siret.
        .field
          = f.label :first_name, 'Prénom'
          = f.text_field :first_name, class: 'form-control m-input'
        .field
          = f.label :last_name, 'Nom'
          = f.text_field :last_name, class: 'form-control m-input'
        .field
          = f.label :email, 'Email'
          = f.text_field :email, class: 'form-control m-input'
        .field
          = f.label :password, 'Mot de passe'
          = f.password_field :password, class: 'form-control m-input'
        -# .field
        -#   = f.label :password_confirmation, 'Confirmation du mot de passe'
        -#   = f.password_field :password_confirmation, class: 'form-control m-input'
        .fields
          = f.label :user_role_id, 'Rôle'
          = f.collection_select :user_role_id, UserRole.all, :id, :name, {}, { class: 'form-control m-input' }


  .m-portlet__foot.m-portlet__foot--fit
    .m-form__actions.m-form__actions
      = f.submit "Enregistrer", class: 'btn btn-primary'
/ end::Form
