= form_for @supplier, html: { class: 'm-form' } do |f|
  .m-portlet__body
    .m-form__section.m-form__section--first.col-md-6
      .form-group.m-form__group
        -# %label{:for => "example_input_full_name"} Société :
        -# %input.form-control.m-input{:placeholder => "Société", :type => "text", name: :q, value: @supplier.name}/
        -# %span.m-form__help Dénomination, Sirene, ou Siret.
        %h3 Vos interlocuteurs chez #{@supplier.name}
        #interlocutors
          = f.fields_for :interlocutors do |interlocutor|
            = render 'interlocutor_fields', f: interlocutor
          .links
            = link_to_add_association 'Ajouter un interlocuteur', f, :interlocutors, class: 'btn btn-secondary'


  .m-portlet__foot.m-portlet__foot--fit
    .m-form__actions.m-form__actions
      = f.submit "Enregistrer", class: 'btn btn-primary'
/ end::Form
